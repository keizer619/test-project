name: Test Ubuntu
on:
  push:
    branches:
      - main
  pull_request:
  workflow_dispatch:
jobs:
  test_linux:
    name: Test action on Ubuntu
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - uses: keizer619/setup-ballerina@main
        name: Test the action.
        with:
          version: latest
      - run: bal version
      - run: bal run hello.bal
